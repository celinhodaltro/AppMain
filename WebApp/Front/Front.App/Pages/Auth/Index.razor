@page "/Auth/Index"
@inject NavigationManager NavigationManager



<style>
    * {
        color:white
    }
    .Menu-Login 
    {
        background-color: rgba(0, 0, 0, 0.5);
        height: 100vh;
    }

    .mud-card-content 
    {
        border-radius:20px;
        background-color: rgba(0, 0, 0, 0.9);
    }

    .mud-input > input.mud-input-root, div.mud-input-slot.mud-input-root {
        color:white !important;
    }

    h4, p 
    {
        font-family: 'Cinzel', serif !important;
        color:white;
    }

    body {
        font-family: 'Cinzel', serif !important;
        background-color: #f0f0f0;
        color: white;
    }

    h1, h2, h3 {
        font-family: 'Cinzel', serif !important;
        color: white;
    }

    h4
    {
        font-family: 'Cinzel', serif !important;
        letter-spacing: 3px !important;
        text-transform: uppercase !important;
    }

    main{
        background-image: url('/Images/Designer.jpeg') !important;
        background-size: cover;
    }

    .Close-Button{
        margin:10%    
    }

    .mud-grid-spacing-xs-6 {
        margin-top: 0 !important;
    }

</style>

<MudGrid>
    <MudItem Class="Menu-Login" xs="3">

        <MudFab Size="Size.Small" Class="Close-Button"  Color="Color.Error" OnClick="BackToStart" StartIcon="@Icons.Material.Filled.ArrowBack" />

        <MudContainer Class="text-white text-center" Style="margin-top:15%;" MaxWidth="MaxWidth.Large">
            @if (!showLogin && !showRegister)
            {
                <MudButtonGroup OverrideStyles="false" DropShadow="true" Color="Color.Primary" Variant="Variant.Outlined">
                    <MudButton StartIcon="@Icons.Material.Filled.Person" Variant="Variant.Filled" Color="Color.Primary" OnClick="ShowLogin">Login</MudButton>
                    <MudButton EndIcon="@Icons.Material.Filled.Edit" Variant="Variant.Filled" Color="Color.Secondary" OnClick="ShowRegister">Register</MudButton>
                </MudButtonGroup>
            }
            else if (showLogin)
            {
                <Login />
            }
            else if (showRegister)
            {
                <Register />
            }

        </MudContainer>
    </MudItem>
</MudGrid>

@code {
    private bool showLogin = false;
    private bool showRegister = false;

    private void ShowLogin()
    {
        showLogin = true;
        showRegister = false;
    }

    private void ShowRegister()
    {
        showLogin = false;
        showRegister = true;
    }

    private void BackToStart()
    {
        if (!showLogin && !showRegister)
            NavigationManager.NavigateTo("Home/Index");
        showLogin = false;
        showRegister = false;
    }
}
