@page "/Auth/Index"
@inject NavigationManager NavigationManager


<MudGrid>
    <MudItem xs="3"  Style="height:100vh;">
        @if (showRegister || showLogin)
        {
            <MudFab Size="Size.Small" Color="Color.Error" OnClick="BackToStart" StartIcon="@Icons.Material.Filled.Close" />
        }
        <MudContainer Class="text-center" Style="margin-top:50%" MaxWidth="MaxWidth.Large">
            @if (!showLogin && !showRegister)
            {
                <MudCard>
                    <MudCardContent>
                        <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="ShowLogin">Login</MudButton>
                        <MudButton Variant="Variant.Filled" Color="Color.Secondary" OnClick="ShowRegister">Register</MudButton>
                    </MudCardContent>
                </MudCard>

            }
            else if (showLogin)
            {
                <Login />
            }
            else if (showRegister)
            {
                <Register />
            }

        </MudContainer>
    </MudItem>
</MudGrid>

@code {
    private bool showLogin = false;
    private bool showRegister = false;

    private void ShowLogin()
    {
        showLogin = true;
        showRegister = false;
    }

    private void ShowRegister()
    {
        showLogin = false;
        showRegister = true;
    }

    private void BackToStart()
    {
        showLogin = false;
        showRegister = false;
    }
}
