@page "/Home/Index"
@using MudBlazor
@inject IJSRuntime JS
@inject NavigationManager NavigationManager
<style>


    body {
        background-color: #121212;
        color: #fff;
        font-family: 'Cinzel', serif !important;
    }

    .logo {
        font-family: 'Cinzel', serif !important;
        font-size: 24px;
        color: #ffffff;
    }

    .hero-section {
        font-family: 'Cinzel', serif !important;
        color: white !important;
        background-image: url('/Images/Layout.jpeg') !important;
        background-size: auto;
        padding-top: 20%;
        color: #fff;
        height: 100vh !important;
    }

    .hero-image {
        max-width: 100%;
        height: auto;
        border-radius: 8px;
    }

    .features-section {
        background-image: url('/Images/Card/Background.jpeg') !important;
        background-size: auto;
        background-position;
        padding-top: 5%;
    }


    .story-section {
        background-color: black;
        padding-top: 10%;
        height: 70vh;
        width: 100%
    }

    .signup-section {
        background-color: black;
        padding: 40px 0;
        text-align: center;
        height: 40vh;
        width: 100%
    }

    .Principal-Container {
        width: 100%;
        padding: 0px !important;
        color: #dc3545 !important;
    }


    .mud-card {
        color: white !important;
        padding: 10px;
        background-color: rgba(0, 0, 0, 0.9) !important;
    }

</style>

<div class="Principal-Container text-center">


    <section class="hero-section">
        <MudGrid>
            <MudItem xs="12" md="12">
                <MudText Typo="Typo.h3">Bem-vindo ao Mundo de Ursulla</MudText>
                <MudText Typo="Typo.subtitle1">Aventure-se no mundo medieval e torne-se uma lenda!</MudText>
                <MudButtonGroup OverrideStyles="false">
                    <MudButton StartIcon="@Icons.Material.Filled.PlayArrow" Color="Color.Primary" Variant="Variant.Filled" Class="mt-4">Jogue Agora</MudButton>
                    <MudButton OnClick="NavigateToRegister" EndIcon="@Icons.Material.Filled.Person" Color="Color.Secondary" Variant="Variant.Filled" Class="mt-4">Registre-se</MudButton>
                </MudButtonGroup>

            </MudItem>
        </MudGrid>
    </section>

    <section id="features" class="features-section">
        <MudGrid style="padding:40px;">
            <MudItem xs="12" md="4">
                <MudCard>
                    <MudCardContent>
                        <MudText Typo="Typo.h5">Mundo Aberto</MudText>
                    </MudCardContent>
                    <MudCardMedia Image="Images/Card/OpenWorld.jpeg" Widht="100" Height="200" />
                    <MudCardContent>
                        <MudText Typo="Typo.body2">This word.</MudText>
                    </MudCardContent>
                </MudCard>
            </MudItem>
            <MudItem xs="12" md="4">
                <MudCard>
                    <MudCardContent>
                        <MudText Typo="Typo.h5">PVP e PVE</MudText>
                    </MudCardContent>
                    <MudCardMedia Image="Images/Card/PvpAndPve.jpeg" Widht="100" Height="200" />
                    <MudCardContent>
                        <MudText Typo="Typo.body2">This pvp and pve.</MudText>
                    </MudCardContent>
                </MudCard>
            </MudItem>
            <MudItem xs="12" md="4">
                <MudCard>
                    <MudCardContent>
                        <MudText Typo="Typo.h5">Classes</MudText>
                    </MudCardContent>
                    <MudCardMedia Image="Images/Card/Classes.jpeg" Widht="100" Height="200" />
                    <MudCardContent>
                        <MudText Typo="Typo.body2">This Classes.</MudText>
                    </MudCardContent>
                </MudCard>
            </MudItem>
        </MudGrid>
    </section>

    <section id="story" class="story-section">
        <MudGrid>
            <MudItem xs="12">
                <MudText Typo="Typo.h4">A História de Eldoria</MudText>
                <MudText>Em um mundo devastado pela guerra, heróis surgem para restaurar a paz e lutar contra forças malignas que ameaçam o reino...</MudText>
            </MudItem>
        </MudGrid>
    </section>

    <section id="signup" class="signup-section">
        <MudGrid>
            <MudItem xs="12">
                <MudText Typo="Typo.h4">Inscreva-se para o Beta!</MudText>
                <MudText>Participe do nosso beta fechado e seja um dos primeiros a explorar Eldoria.</MudText>
                <MudButton Variant="Variant.Filled" Class="mt-4">Enviar</MudButton>
            </MudItem>
        </MudGrid>
    </section>

</div>




@code {
    public async Task NavigateToRegister()
    {
        NavigationManager.NavigateTo("Auth/Index");
    }

    @code {
        private async Task ScrollToNextSection(string Section)
        {
            await JS.InvokeVoidAsync("scrollToElement", Section);
        }
    }
}
